{
  "name": "recipe-site",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "validate": "node scripts/validate-recipes.js",
    "build:recipes": "node scripts/build-recipes.js",
    "build:images": "node scripts/build-images.js",
    "build:all": "npm run validate && npm run build:images && npm run build:recipes",
    "build": "npm run build:all && wrangler deploy --dry-run",
    "deploy": "npm run build:all && wrangler deploy",
    "dev": "npm run build:all && wrangler dev",
    "dev:watch": "concurrently \"npm run build:recipes -- --watch\" \"wrangler dev\""
  },
  "dependencies": {
    "hono": "^4.10.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "concurrently": "^9.2.1",
    "sharp": "^0.34.4",
    "typescript": "^5.9.3",
    "wrangler": "^4.45.0",
    "yaml": "^2.8.1"
  }
}
